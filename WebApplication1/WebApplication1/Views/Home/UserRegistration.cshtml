
@{
    ViewBag.Title = "User Registration";
}

<h1>User Registration</h1>

<form>
    <div class="form-group">
        <label for="InputEmail">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Email">
    </div>

    <div class="row">
        <div class="form-group col-lg-1">
            <label for="day">Day</label>
            <select id="day" class="form-control"></select>
        </div>
        <div class="form-group col-lg-1">
            <label for="month">Month</label>
            <select id="month" class="form-control"></select>
        </div>
        <div class="form-group col-lg-2">
            <label for="year">Year</label>
            <select id="year" class="form-control"></select>
        </div>
    </div>


    <div class="form-group">
        <label for="InputFullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" placeholder="Full Name">
    </div>

    <div class="form-group">
        <label for="InputPhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" placeholder="Phone Number">
    </div>

    <div class="row">
        <div class="form-group col-lg-2">
            <label for="Gender">Gender</label>
            <select id="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
    </div>
    <div class="form-group ">
        <button id="registerNewUser" class="btn btn-success">Add New User To DB</button>
        <button id="registerNewUserNoDB" class="btn btn-danger">When You Dont Have DB </button>
    </div>
</form>



